@model IEnumerable<WebSellingCosmetics.Models.Oder>

@{
    ViewData["Title"] = "Index";

}
<div class="page-header">
    <h3 style="font-family:Helvetica;" class="page-title"> ĐƠN ĐẶT HÀNG </h3>
    <nav aria-label="breadcrumb">

    </nav>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Người đặt
                        </th>
                        <th>
                            Email
                        </th>   <th>
                            SĐT
                        </th>
                        <th>
                            Tổng tiền
                        </th>

                        <th>
                            Ngày đặt
                        </th>

                        <th>
                            Địa chỉ giao hàng
                        </th>

                        <th>
                            Trạng thái
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Account?.FullName
                            </td>
                            <td>
                                @item.Account?.Email
                            </td> 
                            <td>
                                @item.Account?.Phone
                            </td>
                            <td>
                                @item.Total
                            </td>

                            <td>
                                @item?.CreateDay
                            </td>
                            <td>
                                @item?.Account?.Addresses.FirstOrDefault()?.Street ,
                                @item?.Account?.Addresses.FirstOrDefault()?.Ward,
                                @item?.Account?.Addresses.FirstOrDefault()?.District,
                                @item?.Account?.Addresses.FirstOrDefault()?.City
                            </td>


                            <td>Chờ xác nhận </td>

                            <td>
                                <a asp-action="ConfimOrder" asp-route-id="@item?.OdersId" class="btn btn-success mb-2"> Xác nhận đơn hàng</a>
                                <a asp-action="CanOrderby" asp-route-id="@item?.OdersId" class="btn btn-success mb-2"> Hủy đơn hàng</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>