@model WebSellingCosmetics.Models.Product

@{
    ViewData["Title"] = "Edit";
    var ProductTypeId = ViewBag.ProductTypeId;
    if (Model.Status == 1)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '1';
        </script>
    }
    else if (Model.Status == 2)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '2';
        </script>
    }

}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>SỬA SẢN PHẨM</h1>
            <h4>Nhập thông tin</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input  type="hidden" asp-for="ProductId"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label"> Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group  flex-grow-1 mx-4">
                            <img src="@Url.Content("~/contents/Images/Product/" + @Model.Image)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output">
                            <label asp-for="Image" class="control-label"> Hình ảnh đại diện</label>
                            <input type="file" name="fAvatar" asp-for="Image" class="form-control-file" onchange="loadFile(event)" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group  flex-grow-1 mx-4">
                            <img src="@Url.Content("~/contents/Images/Product/" + @Model.Image1)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output1">
                            <label asp-for="Image1" class="control-label">Hình ảnh 1</label>
                            <input type="file" name="fAvatar1" asp-for="Image1" class="form-control-file" onchange="loadFile1(event)" />
                            <span asp-validation-for="Image1" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group  flex-grow-1 mx-4">
                            <img src="@Url.Content("~/contents/Images/Product/" + @Model.Image2)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output2">
                            <label asp-for="Image2" class="control-label"> Hình ảnh 2</label>
                            <input type="file" name="fAvatar2" asp-for="Image2" class="form-control-file" onchange="loadFile2(event)" />
                            <span asp-validation-for="Image2" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group  flex-grow-1 mx-4">
                            <img src="@Url.Content("~/contents/Images/Product/" + @Model.Image3)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output3">
                            <label asp-for="Image3" class="control-label"> Hình ảnh 3</label>
                            <input type="file" name="fAvatar3" asp-for="Image3" class="form-control-file" onchange="loadFile3(event)" />
                            <span asp-validation-for="Image3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Mô tả</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Giá bán</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label"> Loại sản phẩm</label>

                            <select asp-for="ProductTypeId" asp-items="ProductTypeId" class="form-select" required>
                                <option value="">-- Chọn loại sản phẩm --</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Trạng Thái</label>
                            <select class="form-control" asp-for="Status" placeholder="" required>
                                <option value="1" selected>Hoạt động</option>
                                <option value="2">Ngừng hoạt động</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-gradient-primary me-2">Sửa</button>
                            <a asp-action="Index" class="btn btn-light">Trở về</a>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var loadFile = function (event) {
            var image = document.getElementById("output");
            image.src = URL.createObjectURL(event.target.files[0]);
        };
        var loadFile1 = function (event) {
            var image1 = document.getElementById("output1");
            image1.src = URL.createObjectURL(event.target.files[0]);
        };
        var loadFile2 = function (event) {
            var image2 = document.getElementById("output2");
            image2.src = URL.createObjectURL(event.target.files[0]);
        };
        var loadFile3 = function (event) {
            var image3 = document.getElementById("output3");
            image3.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
}
