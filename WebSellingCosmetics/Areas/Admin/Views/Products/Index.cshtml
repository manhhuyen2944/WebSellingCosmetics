@model IEnumerable<WebSellingCosmetics.Models.Product>

@{
    ViewData["Title"] = "Index";

}
<div class="page-header">
    <h3 style="font-family:Helvetica;" class="page-title"> SẢN PHẨM </h3>
    <nav aria-label="breadcrumb">

    </nav>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success mb-2">Thêm</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Hình ảnh
                        </th>
                     
                        <th>
                            Giá bán
                        </th>

                        <th>
                            Số lượng nhập
                        </th>
                        <th>
                            Số lượng tồn kho
                        </th>
                        <th>
                            Loại sản phẩm
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                               

                                <img src="@Url.Content("~/contents/Images/Product/" + item.Image)" style="width: 80px; height: 80px; border-radius: 20px;" alt="" id="output">
                            </td>
                        
                            <td>
                                @item.Price
                            </td>
                           
                            <td>
                                @item.ProductInventory?.Quantity
                            </td>
                            <td>
                                @item.ProductInventory?.QuantitySold
                            </td>
                            <td>
                                @item.ProductType?.Name
                            </td>
                            @if (item.Status == 1)
                            {
                                <td> Hoạt động </td>
                            }@if (item.Status == 2)
                            {
                                <td>Ngừng Hoạt động </td>
                            }
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="action-icon"> <i class="mdi mdi-eye" style="color:#19b6ff;font-size:25px;"></i>  </a>
                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="action-icon"> <i class="mdi mdi-square-edit-outline" style="color:#ffd83b;font-size:25px;"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.ProductId" class="action-icon"> <i class="mdi mdi-delete" style="color:#e75555;font-size:25px;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>