@model WebSellingCosmetics.Models.ProductType

@{
    ViewData["Title"] = "Create";

}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>THÊM LOẠI SẢN PHẨM</h1>
            <h4>Nhập thông tin</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label"> Tên loại sản phẩm</label>
                            <input asp-for="Name" class="form-control"  required/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Mô tả</label>
                            <input asp-for="Description" class="form-control" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Status" value="1" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-gradient-primary me-2">Thêm Mới</button>
                            <a asp-action="Index" class="btn btn-light">Trở về</a>
                        </div>
                    </form>
                </div>
            </div>

      
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
