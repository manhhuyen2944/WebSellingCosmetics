@model WebSellingCosmetics.Models.ProductType

@{
    ViewData["Title"] = "Edit";
    if (Model.Status == 1)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '1';
        </script>
    }
    else if (Model.Status == 2)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '2';
        </script>
    }
   
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>SỬA LOẠI SẢN PHẨM</h1>
            <h4>Nhập thông tin</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ProductTypeId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label  class="control-label"> Tên loại sản phẩm</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label  class="control-label"> Mô tả</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Trạng thái</label>
                            <select class="form-control" asp-for="Status" placeholder="" required>
                                <option value="1" selected>Hoạt động</option>
                                <option value="2">Ngừng hoạt động</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-gradient-primary me-2">Thêm Mới</button>
                            <a asp-action="Index" class="btn btn-light">Trở về</a>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
