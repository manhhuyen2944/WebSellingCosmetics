@model WebSellingCosmetics.Models.Discount

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XÓA MÃ</h1>

<h3>Bạn có chắc chắn muốn xóa  không?</h3>
<div>
    <h4>Discount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên mã giảm giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Mã code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Số tiền giảm giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountPercent)
        </dd>
        <dt class="col-sm-2">
            Số lượng mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Số lần sử dụng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UseNumber)
        </dd>
        <dt class="col-sm-2">
            trạng thái
        </dt>
        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng Hoạt động
            </dd>
        }
    </dl>


    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="DiscountId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
