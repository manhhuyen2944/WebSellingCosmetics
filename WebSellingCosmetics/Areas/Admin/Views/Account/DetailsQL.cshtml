@model Account

<h1>XEM CHI TIẾT</h1>

<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-2">

            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday
        </dd>
        <dt class="col-sm-2">

            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">

            Tài khoản
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">

            Chức vụ
        </dt>
        <dd class="col-sm-10">
            @Model.Role?.Name
        </dd>

        <dt class="col-sm-2">

            TRẠNG THÁI
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>
        }
    </dl>
    <br />

</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="EditQL" asp-route-id="@Model?.AccountId">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Manage">Quay Lại</a>
</div>