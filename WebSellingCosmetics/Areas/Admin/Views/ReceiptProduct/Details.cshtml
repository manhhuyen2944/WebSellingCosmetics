@model WebSellingCosmetics.Models.ReceiptProduct

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ReceiptProduct</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Model.Product?.Name
        </dd>
        <dt class="col-sm-2">
            Phiếu nhập
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/contents/Images/ReceiptProduct/" + @Model.Image)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output">
        </dd>
        <dt class = "col-sm-2">
           Số lượng nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Giá nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
     
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng Hoạt động
            </dd>
        }
      
    </dl>
</div>

<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ReceiptProductId">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var loadFile = function (event) {
            var image = document.getElementById("output");
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
}
