@model Account
@{
    Layout = null;
    ViewData["Title"] = "Register";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            @*  <div class="brand-logo">
                            <img src="~/LayoutAdmin/assets/images/logo.svg">
                            </div> *@
                            <h4>Xin chào! Bắt đầu nào</h4>
                            <h6 class="font-weight-light">Nhập thông tin tài khoản</h6>
                            <form class="pt-3" method="post" asp-action="Register">
                                <div class="form-group">
                                    <input class="form-control form-control-lg" asp-for="UserName" placeholder="Tên đăng nhập" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="Password" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" asp-for="Email" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control form-control-lg" asp-for="FullName" placeholder="Họ và tên" required>
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control form-control-lg" asp-for="Phone" placeholder="Số điện thoại" required>
                                </div> 
                                <div class="form-group">
                                    <input class="form-control form-control-lg" asp-for="Birthday" placeholder="Ngày sinh" required>
                                </div>

                                <div class="form-group">
                                    <label>Giới tính</label>
                                    <select class="form-control" asp-for="Gender" placeholder="" required>
                                        <option value="1" selected>Nam</option>
                                        <option value="2">Nữ</option>
                                        <option value="3">Khác</option>

                                    </select>
                                </div>
                                <div class="mt-3">
                                    <button style="margin-right:200px" type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">ĐĂNG KÍ</button>
                                </div>
                                <div class="mt-3">
                                    <a style="margin-right:200px" asp-action="Index" asp-controller="Home" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Trở về</a>
                                </div>

                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="~/LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="~/LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->  @await Component.InvokeAsync("Notyf");
</body>
</html>