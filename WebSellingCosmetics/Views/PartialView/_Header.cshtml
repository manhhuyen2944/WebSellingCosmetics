                        <a asp-action="Profile" asp-controller="Account" class="dropdown-item">Trang cá nhân</a>

                        <a asp-action="Logout" asp-controller="Account" class="dropdown-item">Đăng xuất</a>
                    </div>
                </div>

            }
            else
            {
